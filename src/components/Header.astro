<header id="header" class="max-h-[80px] w-full relative z-10 top-0 left-0">
  <nav
    class="px-2 flex box-border h-[80px] flex-row justify-between font-bold items-center"
  >
    <img
      class="bject-cover h-12"
      src="./logo/roofing-lg.png"
      alt="logo"
      class="h-full"
    />
    <div class="menu">
      <a class="nav-button" href="/">
        <span>Home</span>
      </a>
      <a class="nav-button" href="/about">
        <span>About us</span>
      </a>
      <a class="nav-button" href="/contactus">
        <span>Services</span>
      </a>
      <a class="nav-button" href="/gallery">
        <span>Gallery</span>
      </a>
      <div class="hamburguer">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>
  </nav>
</header>

<style>
  .hamburguer {
    display: none;
    cursor: pointer;
  }

  .nav-button {
    display: inline-flex;
    line-height: 80px;
    height: 80px;
    font-weight: 700;
    color: rgb(255, 255, 255);
    padding: 0 12px;
    transition: all ease-in-out 0.2s;
  }

  .nav-button:hover {
    color: #fff;
    background-color: rgb(234, 88, 12);
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    -webkit-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
    background-color: rgb(35, 35, 35);
  }

  @media (max-width: 768px) {
    .hamburguer {
      display: block;
    }
    .hamburguer.active .bar:nth-child(2) {
      opacity: 0;
    }
    .hamburguer.active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .hamburguer.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .menu {
      position: fixed;
      left: -100%;
      top: 70px;
      row-gap: 10px;
      flex-direction: column;
      background-color: #ffffff;
      width: 100%;
      color: #000;
      text-align: center;
      color: #fff;
      transition: all ease-in-out 0.3s;
    }

    .menu.active {
      left: 0;
    }
  }
</style>

<script>
  const hamburguer = document.querySelector(".hamburguer");
  const menu = document.querySelector(".menu");

  hamburguer?.addEventListener("click", () => {
    hamburguer.classList.add("active");
    menu!.classList.add("active");
  });

  window.addEventListener("scroll", function () {
    const header = document.getElementById("header");
    if (window.scrollY > 50) {
      header!.classList.remove("bg-transparent");
      header!.classList.add(
        "shadow-lg",
        "sticky",
        "bg-[#313131]",
        "text-white"
      );
    } else {
      header!.classList.remove("bg-[#313131]", "shadow-lg");
      header!.classList.add("bg-transparent");
      // header!.classList.remove("shadow-lg", "sticky");
      // header!.classList.add("bg-white");
    }
  });
</script>
