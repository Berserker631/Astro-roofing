---
const { title, body, ico } = Astro.props;
const path = "./../public/icons/" + ico + ".png";
---

<div
  class="flex flex-col items-center w-72 rounded p-1 mb-2"
  id="card-container"
>
  <img
    class="w-[80px] mb-5 transition-all duration-300 ease-in-out cursor-pointer hover:scale-110 hover: filter"
    src={path}
    alt="fix"
  />
  <h1 class="font-bold text-center m-auto">{title}</h1>
  <p
    class="text-white text-center font-light text-sm"
    style="font-family: Arial, Helvetica, sans-serif;"
  >
    {body}
  </p>
</div>

<script>
  window.addEventListener("resize", function () {
    const width = window.innerWidth;
  });
</script>

<style>
  h1 {
    text-align: center;
    font-family: "Roboto", sans-serif;
    font-weight: 500;
  }
</style>
