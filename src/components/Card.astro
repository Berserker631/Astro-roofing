---
const { title, body, ico } = Astro.props;
const path = "./icons/" + ico + ".png";
---

<div
  class="flex items-center flex-col relative w-72 rounded mb-2"
  id="card-container"
>
  <img
    class="w-[80px] mb-5 transition-all duration-300 ease-in-out cursor-pointer hover:scale-110 hover: filter"
    src={path}
    alt="fix"
  />
  <h1 class="font-bold text-center m-auto text-lg">{title}</h1>
  <p
    class="text-[#999999] text-justify font-light text-base"
    style="font-family: Arial, Helvetica, sans-serif;"
  >
    {body}
  </p>
</div>

<script>
  window.addEventListener("resize", function () {
    // const width = window.innerWidth;
  });
</script>

<style>
  h1 {
    text-align: center;
    font-family: "Roboto", sans-serif;
    font-weight: 500;
  }

  #card-container {
    /* transition:
    opacity 1s ease-in-out,
    transform 1s ease-in-out; */
    animation: fade;
    animation-duration: 0.5s;
  }

  @keyframes fade {
    0% {
      opacity: 0;
      transform: translateY(50px);
    }

    100% {
      opacity: 1;
      transform: translateY(-50px);
    }
  }
</style>
