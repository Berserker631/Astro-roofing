---
import Layout from "../layouts/Layout.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <Layout title="Gallery">
      <div class="container">
        <div class="photo-gallery">
          <div class="column">
            <div class="photo">
              <img src="../gallery/1.jpg" alt="" />
            </div>
            <div class="photo">
              <img src="../gallery/5.jpeg" alt="" />
            </div>
            <div class="photo">
              <img src="../gallery/7.jpeg" alt="" />
            </div>
          </div>
          <div class="column">
            <div class="photo">
              <img src="../gallery/4.jpeg" alt="" />
            </div>
            <div class="photo">
              <img src="../gallery/2.jpeg" alt="" />
            </div>
            <div class="photo">
              <img src="../gallery/6.jpeg" alt="" />
            </div>
          </div>

          <div class="column">
            <div class="photo">
              <img src="../gallery/3.jpeg" alt="" />
            </div>
            <div class="photo">
              <img src="../gallery/8.jpeg" alt="" />
            </div>
            <div class="photo">
              <img src="../gallery/9.jpeg" alt="" />
            </div>
          </div>
        </div>
      </div>
    </Layout>
  </body>
</html>

<style>
  * {
    padding: 0;
    margin: 0;
  }
  .container {
    max-width: 1224px;
    width: 90%;
    margin: auto;
    padding: 40px 0;
  }

  .photo-gallery {
    display: flex;
    gap: 20px;
  }

  .column {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .photo img {
    max-width: 400px;
    width: 100%;
    height: 100%;
    border-radius: 5px;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .photo-gallery {
      flex-direction: column;
    }
  }
</style>
